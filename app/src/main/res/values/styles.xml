<resources>

    <!-- Base application theme. -->
    <style name="base_theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--theme that hides the toolbar, but still keeping the status bar visible-->
    <style name="base_theme.no_toolbar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!--fullscreen theme - hides both the toolbar and status bars-->
    <style name="base_theme.no_toolbar.fullscreen">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--==================== BUTTON ==================== -->
    <!--defines common button attributes-->
    <style name="button" parent="Widget.AppCompat.Button">
        <item name="android:minWidth">130dp</item>
        <item name="android:minHeight">35dp</item>
    </style>
    <!--dark button-->
    <style name="button.dark">
        <item name="android:textColor">@color/white</item>
    </style>
    <!--blue dark button-->
    <style name="button.dark.blue">
        <item name="android:background">@drawable/button_blue_background</item>
    </style>
    <!--ruby dark button-->
    <style name="button.dark.ruby">
        <item name="android:background">@color/ruby_dark</item>
    </style>

    <!--light button-->
    <style name="button.light">
        <item name="android:textColor">@android:color/black</item>
    </style>
    <!--blue button-->
    <style name="blue_button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/blue</item>
    </style>

    <!--==================== LABEL ==================== -->
    <!--common label attributes-->
    <style name="label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--large label-->
    <style name="label.large">
        <item name="android:textSize">28sp</item>
    </style>

    <!--blue label-->
    <style name="label.blue">
        <item name="android:textColor">@color/blue</item>
    </style>
    <!--large blue label-->
    <style name="label.blue.large">
        <item name="android:textSize">28sp</item>
    </style>

    <!--orange label-->
    <style name="label.ruby">
        <item name="android:textColor">@color/ruby</item>
    </style>
    <!--large orange label-->
    <style name="label.ruby.large">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
