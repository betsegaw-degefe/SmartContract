<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@color/white"
    android:elevation="4dp"
    android:padding="8dp"
    tools:ignore="UnusedAttribute">

    <TextView
        android:id="@+id/transactionType"
        style="@style/label.blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        tools:text="car transactionDTO" />

    <View
        android:id="@+id/viewHorizontalPartition"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@id/transactionType"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/ruby" />

    <LinearLayout
        android:id="@+id/publicLedgerDataContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewHorizontalPartition"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/contractItemIcon"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/viewHorizontalPartition"
            app:layout_constraintTop_toTopOf="@+id/transactionFrom"
            app:srcCompat="@drawable/ic_contract" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/transactionFrom"
                style="@style/label.black.large"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                tools:text="Bereket G/dingil" />

            <ImageView
                android:id="@+id/downWardIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/ic_down_arrow" />

            <TextView
                android:id="@+id/transactionTo"
                style="@style/label.black.large"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                tools:text="Betsegaw Degefe" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/transactionTimeStamp"
        style="@style/label.blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/publicLedgerDataContainer"
        android:layout_alignParentEnd="true"
        tools:text="09-Nov-18 07:25:53" />
</RelativeLayout>
