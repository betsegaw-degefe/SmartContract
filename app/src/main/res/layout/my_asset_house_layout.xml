<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="8dp">

    <FrameLayout
        android:id="@+id/myAssetHouseImageContainer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="#f5f5f5">

        <android.support.v4.view.ViewPager
            android:id="@+id/myHouseAssetViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/houseImageIndicator"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="20dp"
            android:padding="5dip"
            app:fillColor="@color/colorAccent"
            app:lineWidth="50dp"
            app:strokeWidth="2dp"
            app:unselectedColor="#cdced2" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llHouseLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/label.blue.large"
                android:layout_marginTop="8dp"
                android:text="Location" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvLocationx1"
                        style="@style/label.black.large"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        tools:text="14.251241" />

                    <TextView
                        android:id="@+id/tvLocationx2"
                        style="@style/label.black.large"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="12dp"
                        tools:text="14.251241" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvLocationx3"
                        style="@style/label.black.large"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        tools:text="14.251241" />

                    <TextView
                        android:id="@+id/tvLocationx4"
                        style="@style/label.black.large"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"

                        android:layout_marginTop="12dp"
                        tools:text="14.251241" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="vertical">

            <TextView
                style="@style/label.blue.large"
                android:layout_gravity="end"
                android:layout_marginTop="8dp"
                android:text="Area" />

            <TextView
                android:id="@+id/houseArea"
                style="@style/label.black.large"
                android:layout_width="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="8dp"
                tools:text="585 square mete" />

            <TextView
                style="@style/label.blue.large"
                android:layout_gravity="end"
                android:layout_marginTop="8dp"
                android:text="Registered" />

            <TextView
                android:id="@+id/houseRegistered"
                style="@style/label.black.large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="8dp"
                tools:text="09-Nov-18 07:25:53" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>