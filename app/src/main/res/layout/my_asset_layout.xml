<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="4dp"
    android:background="@color/white"
    android:padding="2dp">

    <TextView
        android:id="@+id/assetName"
        style="@style/label.blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="10dp"
        tools:text="Asset Name" />
    <View
        android:id="@+id/viewHorizontalPartition"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@id/transactionType"
        android:layout_marginTop="8dp"
        android:background="@color/ruby"
        app:layout_constraintStart_toStartOf="@+id/assetName"
        app:layout_constraintTop_toBottomOf="@+id/assetName" />


    <agency.tango.android.avatarview.views.AvatarView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        app:av_border_color="@android:color/white"
        app:av_border_width="4dp"
        app:av_text_size_percentage="35"
        app:srcCompat="@drawable/ic_contract"
        app:layout_constraintStart_toStartOf="@+id/assetName"
        app:layout_constraintTop_toBottomOf="@+id/viewHorizontalPartition" />

</android.support.constraint.ConstraintLayout>