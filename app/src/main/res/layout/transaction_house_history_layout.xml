<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/houseTransactionHistoryRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    tools:targetApi="lollipop">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="4dp"
        android:orientation="vertical"
        android:paddingTop="4dp"
        tools:targetApi="lollipop">

        <FrameLayout
            android:id="@+id/houseTransactionHistoryImageContainer"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#f5f5f5"
            android:paddingStart="32dp"
            android:paddingEnd="32dp">

            <android.support.v4.view.ViewPager
                android:id="@+id/houseTransactionHistoryViewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.viewpagerindicator.CirclePageIndicator
                android:id="@+id/houseImageIndicator"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="20dp"
                android:padding="5dip"
                app:fillColor="@color/colorAccent"
                app:lineWidth="50dp"
                app:strokeWidth="2dp"
                app:unselectedColor="#cdced2" />

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llHouseLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/label.blue.large"
                        android:layout_marginTop="8dp"
                        android:text="Location" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvLocationx1"
                            style="@style/label.black.large"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            tools:text="14.251241" />

                        <TextView
                            android:id="@+id/tvLocationx2"
                            style="@style/label.black.large"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="12dp"
                            tools:text="14.251241" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvLocationx3"
                            style="@style/label.black.large"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            tools:text="14.251241" />

                        <TextView
                            android:id="@+id/tvLocationx4"
                            style="@style/label.black.large"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"

                            android:layout_marginTop="12dp"
                            tools:text="14.251241" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="vertical">

                <TextView
                    style="@style/label.blue.large"
                    android:layout_gravity="end"
                    android:layout_marginTop="8dp"
                    android:text="Area" />

                <TextView
                    android:id="@+id/transactionHistoryHouseArea"
                    style="@style/label.black.large"
                    android:layout_width="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="8dp"
                    tools:text="585 square mete" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>