<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="ChangePasswordViewModel"
            type="com.gebeya.smartcontract.viewmodel.ChangePasswordViewModel"/>
    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="75dp">

                <customfonts.MyTextView_Roboto_Regular
                    android:id="@+id/changePasswordTitle"
                    style="@style/label.blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="5dp"
                    android:text="Reset Password"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/rect_gray"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/lock" />

                <customfonts.EditText_SFUI_Regular
                    android:id="@+id/txtCurrentPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="#00000000"
                    android:hint="Current password"
                    android:text="@={ChangePasswordViewModel.oldPassword}"
                    android:inputType="textPassword"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:textColorHint="#c6c6c6" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/rect_gray"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/lock" />

                <customfonts.EditText_SFUI_Regular
                    android:id="@+id/txtNewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="#00000000"
                    android:hint="New password"
                    android:text="@={ChangePasswordViewModel.newPassword}"
                    android:inputType="textPassword"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:textColorHint="#c6c6c6" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/rect_gray"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/lock" />

                <customfonts.EditText_SFUI_Regular
                    android:id="@+id/txtConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="#00000000"
                    android:hint="Confirm password"
                    android:text="@={ChangePasswordViewModel.confirmPassword}"
                    android:inputType="textPassword"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:textColorHint="#c6c6c6" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <customfonts.Button_sfuitext_regular
                    android:id="@+id/submitChangePasswordButton"
                    style="@style/button.dark.blue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_horizontal"
                    android:padding="15dp"
                    android:text="CHANGE PASSWORD"
                    android:onClick="@{(v) -> ChangePasswordViewModel.onClick(v)}"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

                <com.github.rahatarmanahmed.cpv.CircularProgressView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/progressViewChangePassword"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    app:cpv_animAutostart="true"
                    app:cpv_color="@color/colorAccent"
                    app:cpv_indeterminate="true" />

            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>
</layout>