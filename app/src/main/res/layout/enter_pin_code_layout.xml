<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white_background"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvPinCodeSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="We sent you a message to your phone number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etPinCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="13"
        app:layout_constraintStart_toStartOf="@+id/tvPinCodeSend"
        app:layout_constraintTop_toBottomOf="@+id/tvPinCodeSend" />

    <TextView
        android:id="@+id/tvCodeFailed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Didn't get the code?"
        app:layout_constraintStart_toStartOf="@+id/etPinCode"
        app:layout_constraintTop_toBottomOf="@+id/etPinCode" />

    <TextView
        android:id="@+id/tvWrongNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Wrong Number?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvCodeFailed" />
</android.support.constraint.ConstraintLayout>