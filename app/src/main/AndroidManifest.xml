<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gebeya.smartcontract">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/base_theme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/base_theme.no_toolbar" />
        <activity
            android:name=".myAsset.MakeTransactionActivity"
            android:label="@string/makeTransaction"
            android:theme="@style/base_theme" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".sendPhoneNumber.SendPhoneNumberActivity"
            android:theme="@style/base_theme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".signUp.SignUpActivity"
            android:label="@string/signUp"
            android:theme="@style/base_theme.NoActionBar"></activity>
        <activity
            android:name=".login.LoginActivity"
            android:label="@string/login"
            android:theme="@style/base_theme.NoActionBar" />
        <activity android:name=".notification.NotificationActivity" />
        <activity android:name=".search.SearchActivity" />
    </application>

</manifest>