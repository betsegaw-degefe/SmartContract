<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gebeya.smartcontract">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/base_theme">

        <!-- This is used when no icon is set for incoming notification messages.-->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_launcher" />
        <!-- This is used when no color is set for the incoming notification message. -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />

        <receiver android:name="com.gebeya.framework.utils.NetworkChangeReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/base_theme.no_toolbar" />
        <activity
            android:name=".splashScreen.SplashScreenActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".myAsset.MakeTransactionActivity"
            android:label="@string/makeTransaction"
            android:theme="@style/base_theme" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".sendPhoneNumber.SendPhoneNumberActivity"
            android:theme="@style/SplashTheme">

        </activity>
        <activity
            android:name=".signUp.SignUpActivity"
            android:label="@string/signUp"
            android:theme="@style/base_theme.NoActionBar"></activity>
        <activity
            android:name=".login.LoginActivity"
            android:label="@string/login"
            android:theme="@style/base_theme.NoActionBar" />
        <activity
            android:name=".notification.NotificationActivity" />
        <activity
            android:name=".search.SearchActivity" />
        <activity
            android:name=".publicLedger.transactionDetail.TransactionDetailActivity" />

        <service
            android:name="com.gebeya.framework.utils.FireMsgService"
            android:stopWithTask="false">
            <intent-filter>

                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>